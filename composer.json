{
    "name": "jumpgate/jumpgate",
    "description": "A general starter kit for laravel apps using jumpgate additions.",
    "keywords": [
        "framework",
        "laravel",
        "jumpgate"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.2",
        "inertiajs/inertia-laravel": "^2.0",
        "jumpgate/menu": "^2.0",
        "laravel/framework": "^12.0",
        "laravel/helpers": "^1.7.2",
        "laravel/prompts": "^0.3.5",
        "laravel/socialite": "^5.18.0",
        "laravel/tinker": "^2.10.1",
        "santigarcor/laratrust": "^8.4",
        "tightenco/ziggy": "^2.4"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.15.2",
        "barryvdh/laravel-ide-helper": "^3.5.5",
        "beyondcode/laravel-dump-server": "^2.1.0",
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3",
        "spatie/laravel-ignition": "^2.9.1"
    },
    "autoload": {
        "files": [
            "bootstrap/helpers/site.php",
            "bootstrap/helpers/jumpgate/api.php",
            "bootstrap/helpers/jumpgate/base.php",
            "bootstrap/helpers/jumpgate/collections.php",
            "bootstrap/helpers/jumpgate/math.php",
            "bootstrap/helpers/jumpgate/numbers.php",
            "bootstrap/helpers/jumpgate/os.php",
            "bootstrap/helpers/jumpgate/strings.php",
            "bootstrap/helpers/jumpgate/view-resolution.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
